---
import Email from "../../icons/Email.astro"
import X from "../../icons/X.astro"
import Github from "../../icons/Github.astro"
import World from "../../icons/World.astro"
import Linkedin from "../../icons/Linkedin.astro"
import { basics } from "../../../cv.json"
import Section from "../Section.astro"
import Phone from "../../icons/Phone.astro"
const {name,label, image, location, profiles, phone, email} = basics
const {city, region} = location

const SOCIAL_ICONS: Record<string, any> = {
    Github,
    Linkedin,
    X
}

---


<Section title="">
    <div class="container">
        <div>
            <div class="info">
                <h1>{name}</h1>
                <h2>{label}</h2>
            </div>
            <span class="address">
                <World/>
                {city} , {region}
            </span>
            <footer>
                {
                    email && (
                        <a href={`mailto:${email}`}
                        title={`Enviar un email a ${name} al correo ${email}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                        <!-- Robar icono -->
                        <Email/>
                        </a>
                    )
                }
    
                 {
                    phone && (
                        <a href={`tel:${phone}`}
                        title={`Llamar a  ${name} al nÃºmero ${phone}`}
                        target="_blank"
                        rel="noopener noreferrer"
                        >
                        <!-- Robar icono -->
                        <Phone />
                        </a>
                    )
                }
                {
                    profiles.map(({network,url,username})=>{
                        const Icon = SOCIAL_ICONS[network]
                        return (
                            <a href={url}
                            title=`visitar mi perfil en ${network}`
                            target="_blank"
                            rel="noopener noreferrer"
                            >
                                <Icon/>
                            </a>
                            
                        )
                    })
                }
            </footer>
    
        </div>
        <figure>
            <img src={image} alt={name}>
        </figure>
    </div>
   
</Section>


<style>
  .container{
    display:flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .info{
    display:flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }
  h1{
    font-size: 2rem;
    font-weight: 700;
  }
  h2{
    color:#444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }
  footer{
    display:flex;
    gap:12px;
    margin-top: 8px;

    svg{
        width: 16px;

    }

    a{
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;

    }

    a:hover{
        background: #eee;
        border: 1px solid #ccc;
    }
   
  }


  img{
    aspect-ratio: 1/1;
    object-fit: cover;
    width: 200px;
    border-radius:50rem;
    background: linear-gradient(white, white) padding-box,
              linear-gradient(to right, red, purple) border-box;
     border: 4px solid transparent;
  }
  span{
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }
  .address{
    svg{
        width: 16px;

    }
  }
</style>